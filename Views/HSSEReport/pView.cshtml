@model HSSEReport

@{
    Layout = "~/Views/Shared/PanelPortal.cshtml";
}

@section PageLevelPlugin {
    <link rel="stylesheet" href="~/admin/vendor/chosen_v1.4.0/chosen.min.css">
    <link rel="stylesheet" href="~/admin/vendor/jquery.tagsinput/jquery.tagsinput.css">
    <link rel="stylesheet" href="~/admin/vendor/checkbo/src/0.1.4/css/checkBo.min.css">
    <link rel="stylesheet" href="~/admin/vendor/intl-tel-input/build/css/intlTelInput.css">
    <link rel="stylesheet" href="~/admin/vendor/dropzone/dist/min/basic.min.css">
    <link rel="stylesheet" href="~/admin/vendor/dropzone/dist/min/dropzone.min.css">
    <link rel="stylesheet" href="~/admin/vendor/bootstrap-daterangepicker/daterangepicker-bs3.css">
    <link rel="stylesheet" href="~/admin/vendor/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css">
    <link rel="stylesheet" href="~/admin/vendor/bootstrap-timepicker/css/bootstrap-timepicker.min.css">
    <link rel="stylesheet" href="~/admin/vendor/clockpicker/dist/bootstrap-clockpicker.min.css">
    <link rel="stylesheet" href="~/admin/vendor/mjolnic-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css">
    <link rel="stylesheet" href="~/admin/vendor/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.css">
}

<!-- main area -->
<div class="main-content">
    <div class="panel mb25">
        <div class="panel-heading border">
            <strong>HSSE Report</strong>
        </div>
        <div class="panel-body">
            <div class="row no-margin">
                <div class="col-lg-12">
                    <form class="form-horizontal bordered-group" role="form" method="post" enctype = "multipart/form-data" asp-action="Edit">
                        <div class="form-group">
                            <label asp-for="HSSEReportID" class="col-sm-2 control-label">ID</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="HSSEReportID" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company" class="col-sm-2 control-label">Perusahaan (Company) *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="Company" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Service" class="col-sm-2 control-label">Service *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="Service" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="PersonOnBoard" class="col-sm-2 control-label">Jumlah Pekerja (Person on Board) *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="PersonOnBoard" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="SafemanHours" class="col-sm-2 control-label">Jumlah Jam Kerja Selamat (Safeman Hours) *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="SafemanHours" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="NumberOfFatalityCase" class="col-sm-2 control-label">Number of Fatality Case *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="NumberOfFatalityCase" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="NumberOfLTICase" class="col-sm-2 control-label">Number of LTI (Loss Time Injury) Case *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="NumberOfLTICase" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="NumberOfMTC" class="col-sm-2 control-label">Number of MTC (Medical Treatment Case) *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="NumberOfMTC" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="NumberOfFirstAid" class="col-sm-2 control-label">Number of First Aid *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="NumberOfFirstAid" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="NumberOfOilSpill" class="col-sm-2 control-label">Number of Oil Spill *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="NumberOfOilSpill" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="NumberOfSafetyMeeting" class="col-sm-2 control-label">Number of Safety Meeting *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="NumberOfSafetyMeeting" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Dokumentasi Safety Meeting</label>
                            <div class="col-sm-10">
                                @if (Model.DokumentasiSafetyMeeting != null)
                                {
                                    <img src="@Url.Action("DownloadFile", "HSSEReport", new { FileName = Model.DokumentasiSafetyMeeting })" />
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="NumberOfToolboxMeeting" class="col-sm-2 control-label">Jumlah Toolbox Meeting (Number of Toolbox Meeting) *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="NumberOfToolboxMeeting" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Dokumentasi Toolbox Meeting</label>
                            <div class="col-sm-10">
                                @if (Model.DokumentasiToolboxMeeting != null)
                                {
                                    <img src="@Url.Action("DownloadFile", "HSSEReport", new { FileName = Model.DokumentasiToolboxMeeting })" />
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="NumberOfEmergencyDrill" class="col-sm-2 control-label">Latihan Penanggulangan Keadaan Darurat (Number of Emergency Drill) *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="NumberOfEmergencyDrill" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Dokumentasi Emergency Drill</label>
                            <div class="col-sm-10">
                                @if (Model.DokumentasiEmergencyDrill != null)
                                {
                                    <img src="@Url.Action("DownloadFile", "HSSEReport", new { FileName = Model.DokumentasiEmergencyDrill })" />
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="NumberOfManagementVisit" class="col-sm-2 control-label">Jumlah Kunjungan Managemen (Number of Management Visit) *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="NumberOfManagementVisit" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Dokumentasi Kunjungan Managemen</label>
                            <div class="col-sm-10">
                                @if (Model.DokumentasiManagementVisit != null)
                                {
                                    <img src="@Url.Action("DownloadFile", "HSSEReport", new { FileName = Model.DokumentasiManagementVisit })" />
                                }
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="ReportingDate" class="col-sm-2 control-label">Tanggal Pelaporan (Reporting Date) *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="ReportingDate" type="text" class="form-control">
                            </div>
                        </div>
                       
                        <div class="form-group">
                            <label asp-for="ReportedBy" class="col-sm-2 control-label">Dilaporkan oleh (Reported by) *</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="ReportedBy" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <a asp-controller="HSSEReport" asp-action="pIndex" class="btn btn-sm btn-round btn-danger"><i class="fa fa-arrow-left"></i> Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /main area -->

@section PageLevelScripts {
    <script src="~/admin/vendor/chosen_v1.4.0/chosen.jquery.min.js"></script>
    <script src="~/admin/vendor/jquery.tagsinput/jquery.tagsinput.min.js"></script>
    <script src="~/admin/vendor/checkbo/src/0.1.4/js/checkBo.min.js"></script>
    <script src="~/admin/vendor/intl-tel-input//build/js/intlTelInput.min.js"></script>
    <script src="~/admin/vendor/dropzone/dist/min/dropzone.min.js"></script>
    <script src="~/admin/vendor/moment/min/moment.min.js"></script>
    <script src="~/admin/vendor/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/admin/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/admin/vendor/bootstrap-timepicker/js/bootstrap-timepicker.min.js"></script>
    <script src="~/admin/vendor/clockpicker/dist/jquery-clockpicker.min.js"></script>
    <script src="~/admin/vendor/mjolnic-bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>
    <script src="~/admin/vendor/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js"></script>
}

@section InitPageScripts {
    <script src="~/admin/scripts/pages/form-custom.js"></script>
}

