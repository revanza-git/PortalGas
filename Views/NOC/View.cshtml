@using Admin.Models.NOC
@model NOC

@{
    Layout = "~/Views/Shared/Panel.cshtml";
}

@section TitleBar {
    <strong>Nusantara Regas Observation Card (NOC)</strong>
}

    @section PageLevelPlugin {
    <link rel="stylesheet" href="~/admin/vendor/chosen_v1.4.0/chosen.min.css">
    <link rel="stylesheet" href="~/admin/vendor/jquery.tagsinput/jquery.tagsinput.css">
    <link rel="stylesheet" href="~/admin/vendor/checkbo/src/0.1.4/css/checkBo.min.css">
    <link rel="stylesheet" href="~/admin/vendor/intl-tel-input/build/css/intlTelInput.css">
    <link rel="stylesheet" href="~/admin/vendor/dropzone/dist/min/basic.min.css">
    <link rel="stylesheet" href="~/admin/vendor/dropzone/dist/min/dropzone.min.css">
    <link rel="stylesheet" href="~/admin/vendor/bootstrap-daterangepicker/daterangepicker-bs3.css">
    <link rel="stylesheet" href="~/admin/vendor/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css">
    <link rel="stylesheet" href="~/admin/vendor/bootstrap-timepicker/css/bootstrap-timepicker.min.css">
    <link rel="stylesheet" href="~/admin/vendor/clockpicker/dist/bootstrap-clockpicker.min.css">
    <link rel="stylesheet" href="~/admin/vendor/mjolnic-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css">
    <link rel="stylesheet" href="~/admin/vendor/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.css">
}

    <!-- main area -->
    <div class="main-content">
        <div class="panel mb25">
            <div class="panel-heading border">
                <ol class="breadcrumb mb0 no-padding">
                    <li>
                        <a href="javascript:;">Content</a>
                    </li>
                    <li>
                        <a href="javascript:;">NOC</a>
                    </li>
                    <li class="active"><strong>@ViewBag.Title</strong></li>
                </ol>
            </div>
            <div class="panel-body">
                <div class="row no-margin">
                    <div class="col-lg-12">
                        <form class="form-horizontal bordered-group" role="form" method="post" enctype="multipart/form-data" asp-action="Edit">
                            <div class="form-group">
                                <label asp-for="NOCID" class="col-sm-2 control-label">NOCID</label>
                                <div class="col-sm-10">
                                    <input disabled asp-for="NOCID" readonly type="text" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="EntryDate" class="col-sm-2 control-label">Waktu</label>
                                <div class="col-sm-10">
                                    <input disabled asp-for="EntryDate" type="text" class="form-control" data-provide="datepicker">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Lokasi" class="col-sm-2 control-label">Lokasi</label>
                                <div class="col-sm-10">
                                    <select disabled asp-for="Lokasi" class="form-control">
                                        <option>-- Pilih --</option>
                                    @foreach (var item in ViewBag.Locations)
                                    {
                                        <option value="@item.LocationID">@item.Deskripsi</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="DaftarPengamatan" class="col-sm-2 control-label">Daftar Pengamatan</label>
                            <div class="col-sm-10">
                                <select disabled asp-for="DaftarPengamatan" class="form-control">
                                    <option>-- Pilih --</option>
                                    @foreach (var item in ViewBag.ObservationLists)
                                    {
                                        <option value="@item.ObservationListID">@item.Deskripsi</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Deskripsi" class="col-sm-2 control-label">Deskripsi</label>
                            <div class="col-sm-10">
                                <textarea disabled asp-for="Deskripsi" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tindakan" class="col-sm-2 control-label">Tindakan</label>
                            <div class="col-sm-10">
                                <textarea disabled asp-for="Tindakan" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rekomendasi" class="col-sm-2 control-label">Rekomendasi</label>
                            <div class="col-sm-10">
                                <textarea disabled asp-for="Rekomendasi" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Prioritas" class="col-sm-2 control-label">Prioritas</label>
                            <div class="col-sm-10">
                                <select disabled asp-for="Prioritas" class="form-control">
                                    <option>-- Pilih --</option>
                                    @foreach (var item in ViewBag.Priorities)
                                    {
                                        <option value="@item.PriorityID">@item.Deskripsi</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status" class="col-sm-2 control-label">Status</label>
                            <div class="col-sm-10">
                                <select disabled asp-for="Status" class="form-control">
                                    <option>-- Pilih --</option>
                                    @foreach (var item in ViewBag.Statuses)
                                    {
                                        <option value="@item.NOCStatusID">@item.Deskripsi</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="DueDate" class="col-sm-2 control-label">Due Date</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="DueDate" type="text" class="form-control" data-provide="datepicker">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="NamaObserver" class="col-sm-2 control-label">Nama Observer</label>
                            <div class="col-sm-10">
                                <input disabled asp-for="NamaObserver" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="DivisiObserver" class="col-sm-2 control-label">Dir/Fungsi/Divi Observer</label>
                            <div class="col-sm-10">
                                <select disabled asp-for="DivisiObserver" class="form-control">
                                    <option>-- Pilih --</option>
                                    @foreach (var item in ViewBag.Departments)
                                    {
                                        <option value="@item.DepartmentID">@item.Deskripsi</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Photo</label>
                            <div class="col-sm-10">
                                @if (Model.Photo != null)
                                {
                                    <img src="@Url.Action("DownloadFile", "NOC", new { ID = Model.NOCID })" />
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <a asp-controller="NOC" asp-action="Index" class="btn btn-sm btn-round btn-danger"><i class="fa fa-arrow-left"></i> Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /main area -->
@section PageLevelScripts {
    <script src="~/admin/vendor/chosen_v1.4.0/chosen.jquery.min.js"></script>
    <script src="~/admin/vendor/jquery.tagsinput/jquery.tagsinput.min.js"></script>
    <script src="~/admin/vendor/checkbo/src/0.1.4/js/checkBo.min.js"></script>
    <script src="~/admin/vendor/intl-tel-input//build/js/intlTelInput.min.js"></script>
    <script src="~/admin/vendor/dropzone/dist/min/dropzone.min.js"></script>
    <script src="~/admin/vendor/moment/min/moment.min.js"></script>
    <script src="~/admin/vendor/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/admin/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/admin/vendor/bootstrap-timepicker/js/bootstrap-timepicker.min.js"></script>
    <script src="~/admin/vendor/clockpicker/dist/jquery-clockpicker.min.js"></script>
    <script src="~/admin/vendor/mjolnic-bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>
    <script src="~/admin/vendor/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js"></script>
}

    @section InitPageScripts {
    <script src="~/admin/scripts/pages/form-custom.js"></script>
}
